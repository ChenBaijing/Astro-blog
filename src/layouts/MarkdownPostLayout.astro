---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;

// 格式化日期
const formattedDate = frontmatter?.pubDate ? new Date(frontmatter.pubDate).toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : '';

// 预计阅读时间
const getReadingTime = (content) => {
  if (!content) return 0;
  const wordsPerMinute = 275;
  const wordCount = content.split(/\s+/g).length;
  return Math.ceil(wordCount / wordsPerMinute);
};

const readingTime = getReadingTime(frontmatter?.content || '');
const tags = frontmatter?.tags || [];
---

<BaseLayout pageTitle={frontmatter?.title || '文章'}>
  <main class="post-container">
    <article class="post-content">
      <header class="post-header">
        <div class="post-meta">
          {formattedDate && <time datetime={frontmatter.pubDate}>{formattedDate}</time>}
          <span class="reading-time">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            {readingTime} 分钟阅读
          </span>
        </div>
        <h1 class="post-title">{frontmatter?.title}</h1>
        {frontmatter?.description && 
          <p class="post-description">{frontmatter.description}</p>
        }
        {tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag) => (
              <a href={`/tags/${tag}`} class="tag-link">
                <span class="tag-hash">#</span>{tag}
              </a>
            ))}
          </div>
        )}
      </header>

      <div class="content prose">
        <slot />
      </div>

      <footer class="post-footer">
        <div class="post-navigation">
          <a href="/posts" class="back-to-blog">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            返回文章列表
          </a>
        </div>
      </footer>
    </article>
  </main>
</BaseLayout>

<style>
  .post-container {
    max-width: 860px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .post-content {
    background: var(--bg-content);
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .post-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    font-size: 0.95rem;
    margin-bottom: 2rem;
  }

  .reading-time {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .icon {
    width: 1.2em;
    height: 1.2em;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.3;
    margin: 0 0 1rem;
    color: var(--text-primary);
    font-weight: 700;
  }

  .post-description {
    font-size: 1.2rem;
    margin: 1.5rem auto;
    max-width: 650px;
    line-height: 1.6;
  }

  .post-tags {
    display: flex;
    justify-content: center;
    gap: 0.8rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  .tag-link {
    display: inline-flex;
    align-items: center;
    padding: 0.3rem 1rem;
    background: var(--bg-tag);
    border-radius: 20px;
    color: var(--text-tag);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .tag-hash {
    margin-right: 0.2rem;
    opacity: 0.8;
  }

  .tag-link:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-1px);
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-primary);
  }

  /* Markdown 内容样式 */
  .content :global(h2) {
    font-size: 1.8rem;
    margin: 2.5rem 0 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border-color);
    color: var(--text-primary);
  }

  .content :global(h3) {
    font-size: 1.4rem;
    margin: 2rem 0 1rem;
    color: var(--text-primary);
  }

  .content :global(p) {
    margin: 1.2rem 0;
    color: var(--text-primary);
  }

  .content :global(a) {
    color: var(--accent);
    text-decoration: none;
    border-bottom: 1px dashed var(--accent);
    transition: all 0.2s ease;
  }

  .content :global(a:hover) {
    border-bottom-style: solid;
  }

  .content :global(ul), .content :global(ol) {
    margin: 1.2rem 0;
    padding-left: 1.5rem;
    color: var(--text-primary);
  }

  .content :global(li) {
    margin: 0.5rem 0;
  }

  .content :global(code) {
    background: var(--bg-code);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--text-code);
    font-family: 'Fira Code', monospace;
  }

  .content :global(pre) {
    background: var(--bg-pre);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid var(--accent);
    background: var(--bg-blockquote);
    border-radius: 0 8px 8px 0;
    color: var(--text-blockquote);
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem auto;
    display: block;
  }

  .content :global(hr) {
    border: none;
    border-top: 2px solid var(--border-color);
    margin: 2rem 0;
  }

  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
  }

  .back-to-blog {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.5rem;
    background: var(--bg-button);
    border-radius: 24px;
    color: var(--text-button);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .back-to-blog:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-2px);
  }

  .back-to-blog svg {
    width: 20px;
    height: 20px;
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .post-container {
      padding: 1rem;
    }

    .post-content {
      padding: 1.5rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-description {
      font-size: 1.1rem;
    }

    .content {
      font-size: 1rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 0.8rem;
    }
  }
</style>